   <!--  ************************* Registration form Starts Here ************************** -->
   <section class="Registrationbody">
   <div class="Registrationcontainer">
    <resheader>Registration</resheader>

    <form asp-action="Create">
        <div class="form first">
            <div class="details personal">
                <span class="title">Personal Details</span>

                <div class="fields">

                    <div class="Resinput-field">
                        <label>Citizen ID</label>
                        <input asp-for="CitizenId" type="text" placeholder="Enter your Citizen ID" required>
                    </div>

                    <div class="Resinput-field">
                        <label>First Name</label>
                        <input asp-for="FName" type="text" placeholder="Enter your First Name" required>
                    </div>

                    <div class="Resinput-field">
                        <label>Last Name</label>
                        <input asp-for="LName" type="text" placeholder="Enter your Last Name" required>
                    </div>

                    <div class="Resinput-field">
                        <label>Date of Birth</label>
                        <input asp-for="Bdate" type="date" placeholder="Enter birth date" required>
                    </div>

                    <div class="Resinput-field">
                        <label>Address</label>
                        <input asp-for="Address" type="text" placeholder="Enter your address" required>
                    </div>


                    <div class="Resinput-field">
                        <label>Email</label>
                        <input asp-for="Email" type="text" placeholder="Enter your email" required>
                    </div>

                    <div class="Resinput-field">
                        <label>Mobile Number</label>
                        <input asp-for="Phone" type="number" placeholder="Enter mobile number" required>
                    </div>

                    <div class="Resinput-field">
                        <label>Gender</label>
                        <select asp-for="Gender" required>
                            <option disabled selected>Select gender</option>
                            <option>Male</option>
                            <option>Female</option>
                        </select>
                    </div>

                    <div class="Resinput-field">
                        <label>Password</label>
                        <input asp-for="Password" type="password" placeholder="Enter Password" required>
                    </div>

                    <div class="Resinput-field">
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Sign Up" class="btn btn-primary" />
                </div>


                @*<button class="nextBtn">
                    <span class="btnText">Sign Up</span>
                     <a asp-action="Create">Sign Up</a>
                    <i class="uil uil-navigator"></i>
                </button>*@
            </div>

          
        </div>

     
    </form>

    @if (ViewBag.Message != null)
            {
                <script type="text/javascript">
window.onload = function() {
    alert("@ViewBag.Message");
};
                    </script>
