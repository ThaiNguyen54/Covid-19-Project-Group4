<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title> Covid-19 Vaccine Portal</title>
    <link rel="icon" href="assets/images/icon-removebg-preview.png">
    <link rel="shortcut icon" href="assets/images/fav.jpg">
    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/css/fontawsom-all.min.css">
    <link rel="stylesheet" href="assets/css/animate.css">
    <link rel="stylesheet" type="text/css" href="assets/css/style.css" />
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

    <script src="~/assets/js/jquery-3.2.1.min.js"></script>

    <script>
        $(document).ready(function(){
            $("#SelectInjectionNumber").change(function(){
                if ($(this).val() == "1") {
                    $("#FirstInject").attr('disabled', 'disabled');
                    $("#SecondInject").attr('disabled', 'disabled');
                    $("#FirstInjectDate").attr('disabled', 'disabled');
                    $("#SecondInjectDate").attr('disabled', 'disabled')
                }
                else if ($(this).val() == "2") { 
               
                    $("#SecondInject").attr('disabled', 'disabled');
                    $("#SecondInjectDate").attr('disabled', 'disabled')
                    $("#FirstInject").removeAttr('disabled');
                    $("#FirstInjectDate").removeAttr('disabled');
                }
                else {
                    $("#FirstInject").removeAttr('disabled');
                    $("#SecondInject").removeAttr('disabled');
                    $("#FirstInjectDate").removeAttr('disabled');
                    $("#SecondInjectDate").removeAttr('disabled');
                }
            })
        })
    </script>
</head>

<body>

   

   <!--  ************************* Registration form Starts Here ************************** -->
   <section class="Registrationbody">
   <div class="Registrationcontainer">
    <resheader>Registration</resheader>

    <form asp-action="CreateForm">
        <div class="form first">
            <div class="details personal">
                <span class="title">Personal Details</span>

                <div class="fields">
                    <div class="Resinput-field">
                        <label>First Name</label>
                        <input type="text" placeholder="Enter your first name" value=@GlobalVariables.citizen.FName required>
                    </div>
                    <div class="Resinput-field">
                        <label>Last Name</label>
                        <input type="text" placeholder="Enter your last name" value=@GlobalVariables.citizen.LName
                        required>
                    </div>
                    
                    <div class="Resinput-field">
                        <label>Date of Birth</label>
                        <input type="date" placeholder="Enter birth date" value=@GlobalVariables.DateOfBirth required>
                    </div>

                    <div class="Resinput-field">
                        <label>Email</label>
                        <input type="text" placeholder="Enter your email" value=@GlobalVariables.citizen.Email required>
                    </div>

                    <div class="Resinput-field">
                        <label>Mobile Number</label>
                        <input type="number" placeholder="Enter mobile number" value=@GlobalVariables.citizen.Phone required>
                    </div>

                    <div class="Resinput-field">
                        <label>Gender</label>
                        <select required>
                            <option disabled>Select gender</option>
                                      @{
                                        if (GlobalVariables.citizen.Gender == "Male")
                                        {
                                              <option selected>Male</option>
                                              <option>Female</option>                                                                                       
                                        }      
                                        else if (GlobalVariables.citizen.Gender == "Female")
                                        {
                                            <option>Male</option>
                                            <option selected>Female</option>
                                                                                                                                    
                                        }
                                      }
                            
                            
                        </select>
