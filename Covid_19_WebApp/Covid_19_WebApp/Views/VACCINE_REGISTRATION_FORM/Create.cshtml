                    </div>*@

            
                    <div class="Resinput-field">
                        <label>Address</label>
                        <input type="text" placeholder="Enter Current address" value=@GlobalVariables.citizen.Address required>
                    </div>
                    <div class="Resinput-field">
                    </div>
                </div>

                <button class="nextBtn">
                    <span class="btnText">Next</span>
                    <i class="uil uil-navigator"></i>
                </button>
            </div> 
        </div>
